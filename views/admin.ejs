<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gerenciador de userss</title>
  <link href="/css/style.css" rel="stylesheet">
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-gray-200">

  <nav class="bg-gray-800 p-4">
    <div class="container mx-auto flex justify-between items-center">
      <span class="text-white text-lg font-bold">Bem-vindo(a), <%= user.username %>!</span>
      <a href="/logout" class="text-white"><i class="fas fa-sign-in-alt"></i></a>
    </div>
  </nav>

  <div class="container mx-auto mt-10">
    <div class="flex justify-end mb-4">
      <% if (user.role == 'admin' ) { %>
        <a href="/"
          class="bg-gray-800 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline me-2">
          <i class="fa fa-robot"></i>
        </a>
        <% } %>
          <button id="openModalButton"
            class="bg-gray-800 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
            <i class="fas fa-plus"></i>
          </button>
    </div>

    <table class="min-w-full bg-white shadow-md rounded-lg align-middle">
      <thead class="bg-gray-800 text-white">
        <tr>
          <th class="px-4 py-2">#</th>
          <th class="px-4 py-2">Usuário</th>
          <th class="px-4 py-2">Data de Criação</th>
          <th class="px-4 py-2">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(users=> { %>
          <tr>
            <td class="px-4 py-2 font-bold">
              <div class="flex justify-center">
                <%= users.id %>
              </div>
            </td>
            <td class="px-4 py-2">
              <div class="flex justify-center">
                <%= users.username %>
              </div>
            </td>
            <td class="px-4 py-2">
              <div class="flex justify-center">
                <%= users.created_at.toLocaleString('pt-BR', { year: 'numeric' , month: 'numeric' , day: 'numeric' ,
                  hour: '2-digit' , minute: '2-digit' }) %>
              </div>
            </td>
            <td class="px-4 py-2">
              <div class="flex justify-center">
                <form action="/delete-user/<%= users.id %>" method="POST">
                  <button type="submit"
                    class="bg-gray-800 hover:bg-gray-700 text-white font-bold py-1 px-3 rounded focus:outline-none focus:shadow-outline mr-1">
                    <i class="fas fa-trash"></i>
                  </button>
                </form>
              </div>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>

  <script>
    const openModalButton = document.getElementById('openModalButton');
    const closeModalButton = document.getElementById('closeModalButton');
    const modal = document.getElementById('modal');

    openModalButton.addEventListener('click', () => {
      modal.classList.remove('hidden');
    });

    closeModalButton.addEventListener('click', () => {
      modal.classList.add('hidden');
    });
  </script>

</body>

</html>